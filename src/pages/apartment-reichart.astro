---
import PageHeader from "@components/PageHeader.astro";
import Shape from "@components/Shape.astro";
import Base from "@layouts/Base.astro";
import { getEntryBySlug } from "astro:content";
import { Image } from "@astrojs/image/components";
import CareerBenifits from "@layouts/function-components/CareerBenifits";
import { getSinglePage } from "@lib/contentParser.astro";
import { AiFillCheckCircle } from "react-icons/ai/index.js";

const careerIndex = await getEntryBySlug<any, string>("apartment", "reichart");

const { benifits, benefitsInDetail, image } = careerIndex.data;

export async function getStaticPaths() {
  const apartments = await getSinglePage("apartments");
  const paths = apartments.map((apartment) => ({
    params: {
      single: apartment.slug,
    },
    props: { apartment },
  }));
  return paths;
}
const page_data = {
  title: careerIndex.data.title,
  page_title: careerIndex.data.page_title,
  content: careerIndex.body,
};

const widget = () => {
  const script = document.createElement('script');
  script.src = "https://static.ferienwohnungen.de/v2/JavaScripts/widget.min.js";
  script.async = true;
  document.body.appendChild(script);
};

---

<Base
  title={careerIndex.data.title}
  meta_title={careerIndex.data.meta_title}
  description={careerIndex.data.description}
  image={careerIndex.data.image}
>
  <Shape />

  <section class="page-hero pb-14 pt-16">
    <div class="container">
      <PageHeader page_data={page_data} />
      <div class="col-12 mt-14">
        <div class="relative">
          <Image
            src={image}
            alt=""
            height={532}
            width={1044}
            class="w-full rounded"
          />
          <Image
            class="lg:h-[150px] lg:w-[150px] absolute -left-[8%] bottom-[12%] z-[-1] h-20 w-20 -rotate-90 lg:-left-8 lg:bottom-4"
            src="/images/shape.png"
            height={130}
            width={130}
            alt=""
          />
          <Image
            class="absolute -bottom-4 -right-4 z-[-1] h-16 w-16 -rotate-90"
            src="/images/shape.png"
            alt=""
            height={64}
            width={64}
          />
        </div>
      </div>
    </div>
  </section>
  <CareerBenifits benifits={benifits} client:load />
  <section>
    <div class="container">
      {
        benefitsInDetail.map((item: any, index: number) => (
          <div class="gx-5 row mt-16 items-center first:mt-12">
            <div
              class={`lg:col-7 ${
                index % 2 === 0 ? "lg:order-1" : "lg:order-0"
              }`}
            >
              <div class="relative">
                <Image
                  class="w-full object-contain"
                  alt="service"
                  width={473}
                  height={286}
                  src={item.image}
                />
              </div>
            </div>
            <div
              class={`mt-6 lg:col-5 lg:mt-0 ${
                index % 2 === 0 ? "lg:order-0" : "lg:order-1"
              }`}
            >
              <div class="text-container">
                <h2 class="lg:text-4xl">{item.title}</h2>

                <ul class="mt-6 text-dark lg:-ml-4">
                  {item.list.map((list: any) => (
                    <li class="mb-2 flex items-center rounded px-4">
                      <AiFillCheckCircle className="mr-3 fill-primary text-white" />
                      {list}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
  <section>
    <div class="container">
      <script>!function(d,s,id){var j,w=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){j=d.createElement(s);j.id=id;j.src='https://static.ferienwohnungen.de/v2/JavaScripts/widget.min.js';w.parentNode.insertBefore(j,w);}}(document,'script','fwde-widget');</script> <a class="ferienwohnungende-calendar" href="https://www.ferienwohnungen.de/ferienwohnung/25416/" target="_blank" data-object-id="25416" data-months="3" title="Ferienwohnung Reichart bei ferienwohnungen.de"><img src="https://static.ferienwohnungen.de/v2/Images/Logo/ferienwohnungen-de-widget.png" alt="ferienwohnungen.de" /></a>
    </div>
  </section>
</Base>